    "moduleResolution": "node16",
    "noImplicitOverride": true,
    "outDir": "../../dist/server",
    "paths": {
      "assert": ["./global.d.ts"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "types": [
      "node"
    ]
  },
  "references": [
    { "path":  "../common" }
  ]
}
